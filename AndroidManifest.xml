<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.mintech.bluetoothhearingaid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:maxSdkVersion="19"
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.VoiceRecordActivity"
            android:label="@string/voice_record"
            android:launchMode="singleTask" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kr.mintech.bluetoothhearingaid.MainActivity" />
        </activity>
        <activity
            android:name=".activities.EmergencyCallActivity"
            android:label="@string/emergency_call" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kr.mintech.bluetoothhearingaid.MainActivity" />
        </activity>
        <activity
            android:name=".activities.SelectPersonActivity"
            android:label="@string/select_person" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kr.mintech.bluetoothhearingaid.activities.EmergencyCallActivity" />
        </activity>

        <receiver android:name=".receivers.BluetoothReceiver" >
            <intent-filter android:priority="2147483647" >
                <action android:name="android.intent.action.MEDIA_BUTTON" />
                <action android:name="android.media.VOLUME_CHANGED_ACTION" />
            </intent-filter>
        </receiver>

        <service android:name=".services.MediaButtonMonitorService" />
    </application>

</manifest>